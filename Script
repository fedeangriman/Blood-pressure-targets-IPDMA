############################### R script #####################################
## BP targets for adults in shock IPDMA                                     ##
## Revision NEJM Evidence, version 1.8; October 2024                       ##
## This code:                                                               ##
### Imports a previously generated combined dataset                         ##
### Implements Bayesian random effects models                               ##
### Explores sources of HTE (a-priori and ad-hoc)                           ##
################################# IPDMA ######################################

# Importing data----
# Cleaning dataset done previously (input files are raw from 3 trials)
source("65_IPDMA - Dataset_generation.R")

# Accessory file with Bayesian functions
source("Bayesian probabilities functions.R")

# Description, priors, and study-level analyses----
## Overall summary and NAs by variable
summary(data_analysis)
miss_var_summary(data_analysis)

## Table one (baseline description)----
description <- print(CreateTableOne(
  data = data_analysis,
  vars = c("age", "female", "apache", "cad", "htn", "chf", "ckd", "weight", "rrt", "sepsis", "study"),
  strata = c("exposure"), 
  factorVars = c("female", "htn", "chf","rrt", "sepsis", "cad", "ckd", "study"),
  addOverall = TRUE),
  nonnormal = c("apache"),
  test = FALSE, 
  smd = TRUE)

## Exploration of priors----
## I.e., 1) weakly informative one, 2) optimistic prior, 3) skeptical prior, 4) pessimistic prior
optimistic <- rnorm(10000,-0.2, 0.4)
neutral <- rnorm(10000, 0, 5)
skeptical <- rnorm(10000, 0, 0.35)
pessimistic <- rnorm(10000, 0.2, 0.4)

describe(optimistic)
mean(exp(optimistic) > 1)
exp(quantile(optimistic, 0.025))
exp(quantile(optimistic, 0.5))
exp(quantile(optimistic, 0.975))

describe(exp(neutral) > 1)
mean(neutral > 0)
exp(quantile(neutral, 0.025))
exp(quantile(neutral, 0.5))
exp(quantile(neutral, 0.975))

describe(exp(skeptical) > 1)
mean(skeptical > 0)
exp(quantile(skeptical, 0.025))
exp(quantile(skeptical, 0.5))
exp(quantile(skeptical, 0.975))

describe(exp(pessimistic) > 1)
mean(pessimistic > 0)
exp(quantile(pessimistic, 0.025))
exp(quantile(pessimistic, 0.5))
exp(quantile(pessimistic, 0.975))

## Recreating individual study results----
### Individual trials----
library(sandwich)
library(fmsb)
data_65 <- data_analysis %>% filter(study==0) # Can change here to evaluate != trials

# No models; frequentist 95% confidence interval
table_2x2 <- table(data_65$exposure, data_65$death_90)
table_2x2
risk_exposed <- table_2x2[2, 2] / (table_2x2[2, 2] + table_2x2[2, 1])
risk_unexposed <- table_2x2[1, 2] / (table_2x2[1, 2] + table_2x2[1, 1])
data_65$total <- (table_2x2[2, 2] + table_2x2[2, 1]) + (table_2x2[1, 2] + table_2x2[1, 1])

risk_ratio <- risk_exposed / risk_unexposed
se_log_rr <- sqrt((1/table_2x2[2, 2]) + (1/table_2x2[1, 2]) - 
                    (1/(table_2x2[2, 2] + table_2x2[2, 1])) - 
                    (1/(table_2x2[1, 2] + table_2x2[1, 1])))
log_rr <- log(risk_ratio)
lower_log_rr <- log_rr - 1.96 * se_log_rr
upper_log_rr <- log_rr + 1.96 * se_log_rr
ci_lower <- exp(lower_log_rr)
ci_upper <- exp(upper_log_rr)
cat("Risk Ratio:", risk_ratio, "\n")
cat("95% Confidence Interval:", ci_lower, "-", ci_upper, "\n")

# With models (Bayesian log-binomial model)
trial_fit <- stan_glm(death_90 ~ exposure, 
                data = data_65, 
                family = binomial(link = "log"),
                prior = normal(0, 5), 
                prior_intercept = normal(0, 2.5),
                chains = 4, 
                iter = 2000, 
                seed = 12345)
summary(trial_fit) 
exp_coefficients <- exp(coef(trial_fit))
exp_coefficients
exp_conf_int <- exp(posterior_interval(trial_fit, prob = 0.95))
exp_conf_int

# Probability of benefit (using function for ease; could also extract chains)
bayesian_pr_network(0.93, 1.03)

## Meta-analysis, study level approach----
## Used as benchmark for main IPDMA analysis
### Frequentist----
library(metafor)
library(meta)
data <- data.frame(
  trial = 1:3,
  effect_size = c(0.93, 0.84, 0.96),
  lower_ci = c(0.85, 0.50, 0.82),
  upper_ci = c(1.02, 1.33, 1.15)
)

# Using metafor
data$se <- (data$upper_ci - data$lower_ci) / (2 * 1.96)
data$variance <- data$se^2
meta_analysis <- rma(yi = effect_size, vi = variance, data = data, method = "REML")
summary(meta_analysis)
forest(meta_analysis)

# Using meta
meta_analysis <- metagen(
  TE = effect_size,
  seTE = se,
  data = data,
  studlab = paste("Trial", 1:3),
  sm = "SMD", 
  method.tau = "ML"
)
summary(meta_analysis)
forest(meta_analysis)

### Bayesian random effects meta-analysis----
model <- brm(
  bf(effect_size | se(se) ~ 1 + (1 | trial)),  
  data = data,
  prior = c(
    prior(normal(0, 5), class = "Intercept"), 
    prior(cauchy(0, 0.29), class=sd)),
  family = gaussian(),
  chains = 4,          
  cores = 4,           
  iter = 10000          
)
summary(model)
plot(model)
ranef(model)
post.samples<-posterior_samples(model, c("^b", "sd"))
names(post.samples) <- c("smd", "tau")

# Plot for tau
ggplot(aes(x = tau), data = post.samples) +
  geom_density(fill = "lightgreen", color = "lightgreen", alpha = 0.7) +
  geom_point(y = 0, x = mean(post.samples$tau)) +
  labs(x = expression(tau),
       y = element_blank()) +
  theme_minimal()

### Bayesian fixed effects meta-analysis----
model <- brm(
  bf(effect_size | se(se) ~ 1),  
  data = data,
  prior = c(
    prior(normal(0, 5), class = "Intercept")), 
  family = gaussian(),
  chains = 4,          
  cores = 4,           
  iter = 8000
  )
summary(model)

# Probability of benefit in study-level Bayesian MAs (both random and fixed effects)
bayesian_pr_network(0.93, 1.09)
bayesian_pr_network(0.93, 1.01)

# Main analysis----
## Bayesian log-binomial model with random effects for treatment within study----
random_rr = stan_glmer(formula = death_90 ~ exposure + (1 + exposure | study), 
                       data = data_analysis, 
                       family=binomial(link="log"), 
                       prior = normal(location = 0, scale = 5),  
                       warmup = 500, 
                       iter = 2000,
                       cores = 4, 
                       seed = 123)
random_rr
?prior_summary.stanreg
ci95 = posterior_interval(random_rr, prob=0.95)
exp(ci95)
summary(random_rr)
samples_initial = as.matrix(random_rr)
samples = samples_initial[,2]

# Visualizing priors and posteriors
posterior_vs_prior(random_rr)

# Median and 95% credible intervals 
exp(quantile(samples, 0.025))
exp(quantile(samples, 0.5))
exp(quantile(samples, 0.975))

# Probability of benefit and harm
mean(samples < 0)
mean(samples > 0)

# Absolute risk reduction
ar = exp(samples) * 0.4
arr = ar - 0.4
quantile(arr, 0.025)
quantile(arr, 0.5)
quantile(arr, 0.975)

