# Ad-hoc MICE and frequentist logistic models----
library(mice)
library(lme4)
library(dplyr)
library(broom.mixed)
library(mitml)


## MICE; then multivariable mixed logistic model----
imputed_data <- mice(data_analysis, m = 5, method = "pmm", seed = 123)
summary(imputed_data)

fit_mice <- with(imputed_data, 
            glmer(formula = death_90 ~ exposure + age + female + cad + 
                  htn + ckd + chf + rrt + sepsis + (1 + exposure | study),
                  family = binomial(link = "logit")))

pooled_results <- pool(fit_mice)
pooled_summary <- summary(pooled_results)
print(pooled_summary)

## Frequentist logistic model----
## No imputation; as benchmark for analysis above
logit <-
  glmer(
    formula = death_90 ~ exposure + age + female + cad + htn + ckd + chf + rrt + sepsis + (1 + exposure | study),
    family = binomial(link = "logit"),
    data = data_analysis
  )

logit
model_summary <- summary(logit)

coef_estimates <- model_summary$coefficients
odds_ratios <- exp(coef_estimates[, "Estimate"])

lower_ci <- exp(coef_estimates[, "Estimate"] - 1.96 * coef_estimates[, "Std. Error"])  # Lower CI
upper_ci <- exp(coef_estimates[, "Estimate"] + 1.96 * coef_estimates[, "Std. Error"])  # Upper CI

results_df <- data.frame(
  term = rownames(coef_estimates),
  odds_ratio = odds_ratios,
  lower_ci = lower_ci,
  upper_ci = upper_ci
)
print(results_df)

## Frequentist modified Poisson model----
## No imputation; as benchmark for analysis above
## Note that SE likely subject to over dispersion given choice of model
log_rr <-
  glmer(
    formula = death_90 ~ exposure + (1 + exposure | study),
    family = poisson(link = "log"),
    data = data_analysis
  )

log_rr
model_summary <- summary(log_rr)

coef_estimates <- model_summary$coefficients
risk_ratios <- exp(coef_estimates[, "Estimate"])

lower_ci <- exp(coef_estimates[, "Estimate"] - 1.96 * coef_estimates[, "Std. Error"]) 
upper_ci <- exp(coef_estimates[, "Estimate"] + 1.96 * coef_estimates[, "Std. Error"])  

results_df <- data.frame(
  term = rownames(coef_estimates),
  risk_ratio = risk_ratios,
  lower_ci = lower_ci,
  upper_ci = upper_ci
)
print(results_df)
