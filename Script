# A-priori HTE analysis----
### Subgroups of interest: 
#### Age < 65 vs. >= 65 (better in older)
#### HTN yes vs. no (better in HTN)
#### CHF yes vs. no (better in CHF)
#### Sepsis yes vs. no (better in sepsis)
#### APACHE high vs. low (defined using median; better with increasing severity)
#### CKD yes vs. no (better in CKD)

## Data processing to model between and within interactions
data_hte_pre <- data_analysis %>%
  mutate(age_cat = case_when(
    age < 65 ~ 0, age >= 65 ~ 1, TRUE ~ NA)) %>%
  mutate(q_apache = ntile(apache, 4) - 1) %>%
  mutate(apache_cat = case_when(
    apache > 21 ~ 1, apache <=21 ~ 0, TRUE ~ NA)) %>%
  mutate(q_risk = ntile(prediction,4) - 1) %>%
  mutate(apache_center = apache - 21) %>%
  mutate(intx_age = age_cat*exposure) %>%
  mutate(intx_htn = htn*exposure) %>%
  mutate(intx_chf = chf*exposure) %>%
  mutate(intx_sepsis = sepsis*exposure) %>%
  mutate(intx_ckd = ckd*exposure) %>%
  mutate(intx_apache = apache_cat*exposure) %>%
  mutate(intx_apache_center = apache_center*exposure) %>%
  mutate(intx_qapache = q_apache*exposure) %>%
  mutate(intx_risk = q_risk*exposure)

data_hte <- data_hte_pre %>%
  group_by(study) %>%
  mutate(ave_age = mean(age_cat>0, na.rm = TRUE)) %>%
  mutate(ave_chf = mean(chf > 0, na.rm = TRUE)) %>%
  mutate(ave_ckd = mean(ckd > 0, na.rm = TRUE)) %>%
  mutate(ave_htn = mean(htn > 0, na.rm = TRUE)) %>%
  mutate(ave_sepsis = mean(sepsis > 0, na.rm = TRUE)) %>%
  mutate(ave_apache = mean(apache_cat>0, na.rm = TRUE)) %>%
  mutate(ave_apache_center = mean(apache_center, na.rm = TRUE)) %>%
  mutate(ave_risk = mean(q_risk, na.rm = TRUE)) %>%
  mutate(ave_qapache = mean(q_apache, na.rm = TRUE)) %>%
  mutate (intx_age_between = exposure*ave_age) %>%
  mutate(intx_sepsis_between = exposure*ave_sepsis) %>%
  mutate(intx_ckd_between = exposure*ave_ckd) %>%
  mutate(intx_htn_between = exposure*ave_htn) %>%
  mutate(intx_chf_between = exposure*ave_chf) %>%
  mutate(intx_apache_between = exposure*ave_apache) %>%
  mutate(intx_apache_center_between = exposure*ave_apache_center) %>%
  mutate(intx_qapache_between = exposure*ave_qapache) %>%
  mutate(intx_risk_between = exposure*ave_risk) %>%
  ungroup()

## Interaction by Age----
### Modified Poisson used for computation as needed
random_rr = stan_glmer(formula = death_90 ~ exposure + age_cat + ave_age + intx_age + intx_age_between + (1 + exposure | study), 
                       data = data_hte, 
                       family=poisson(link="log"), 
                       prior = normal(location = 0, scale = 5), 
                       warmup = 500, 
                       iter = 2000,
                       cores = 4, 
                       seed = 123)
random_rr
ci95 = posterior_interval(random_rr, prob=0.95)
exp(ci95)
summary(random_rr)
samples_initial = as.matrix(random_rr)
samples_expo = samples_initial[,2] # Location of exposure
samples_intx = samples_initial[,5] # Location of within interaction
samples = samples_expo + samples_intx

# Median and 95% credible intervals in age_cat = 1
exp(quantile(samples, 0.025))
exp(quantile(samples, 0.5))
exp(quantile(samples, 0.975))
mean(samples < 0)

# Median and 95% credible intervals in age_cat = 0
exp(quantile(samples_expo, 0.025))
exp(quantile(samples_expo, 0.5))
exp(quantile(samples_expo, 0.975))
mean(samples_expo < 0)

# Probability of interaction
mean(samples_intx < 0)
mean(samples_intx > 0)


